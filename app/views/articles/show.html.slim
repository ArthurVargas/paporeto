- if notice
  .alert
    button.close data-dismiss="alert" type="button"
    = notice
h1 = @article.title

= img @article.picture.regular if @article.picture?

p = @article.summary
p: strong = @article.category.try :name
hr
= simple_format @article.body

= link_to 'Editar', edit_article_path(@article), class:"btn"